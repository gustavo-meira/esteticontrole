generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/clients.db"
}

model Measures {
  id String @id @default(cuid())

  measuredDate DateTime @default(now())
  rightArm     Float?
  leftArm      Float?
  chest        Float?
  waist        Float?
  hips         Float?
  butt         Float?
  rightThigh   Float?
  leftThigh    Float?
  rightCalf    Float?
  leftCalf     Float?
  height       Float?
  weight       Float?

  client   Client @relation(fields: [clientId], references: [id])
  clientId String
}

model Client {
  id String @id @default(cuid())

  name              String
  birthDate         DateTime
  drink             Boolean
  smoke             Boolean
  children          Int?
  sleep             String
  feeding           String
  drinkWater        Float
  intestine         String
  surgeries         String?
  illnesses         String?
  medicines         String?
  illnessesInFamily String?
  mentalHealth      String?
  otherTreatments   String?
  indication        String?
  description       String?

  measures Measures[]
  packages Package[]
}

model Package {
  id String @id @default(cuid())

  date      DateTime?
  treatment String?
  value     Float?
  paid      Boolean   @default(false)

  client   Client @relation(fields: [clientId], references: [id])
  clientId String
}
